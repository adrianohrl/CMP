<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="cmpPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>cmp.model.events.AbstractEmployeeRelatedEvent</class>
    <class>cmp.model.events.Casualty</class>
    <class>cmp.model.events.CasualtyEntryEvent</class>
    <class>cmp.model.events.EntryEvent</class>
    <class>cmp.model.events.LogEvent</class>
    <class>cmp.model.events.TimeClockEvent</class>
    <class>cmp.model.production.Model</class>
    <class>cmp.model.production.Phase</class>
    <class>cmp.model.production.PhaseProductionOrder</class>
    <class>cmp.model.production.ProductionOrder</class>
    <class>cmp.model.personnel.Loggable</class>
    <class>cmp.model.personnel.Supervisor</class>
    <class>cmp.model.personnel.Sector</class>
    <class>cmp.model.personnel.Employee</class>
    <class>cmp.model.personnel.Manager</class>
    <class>cmp.model.personnel.Subordinate</class>
    <class>cmp.model.production.ModelPhase</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cmp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="cmp"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="cmp"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
